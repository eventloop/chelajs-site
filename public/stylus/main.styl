navbarText = white
beerJsBlue = #b2d1e7
chelaFont = 'Source Sans Pro', sans-serif

body
	padding 50px 0 0
	background darken(beerJsBlue, 20%)
	font-family: chelaFont

body.home
	height 100%

	.jumbotron
		position fixed
		height 100%
		width 100%

		h1
			font-weight 900

		.next-event-info
			font-size 16px

		.next-event-info > *
			margin-bottom 15px


	.footer
		height 85px
		position fixed
		width 100%
		bottom 0
		background: white;

h1 img
	max-width: 100%

.navbar
	background: beerJsBlue
	.navbar-brand
		padding 7px 15px

		img
			height 53px
			background #fff
			border-radius 15%
			padding 7px

	.navbar-text
		color navbarText
		font-size 15px
		padding-top 5px

		.avatar
			height 30px
			border-radius 15%
		.log-out
			color navbarText
			&:hover
				color darken(navbarText, 30%)
				text-decoration none

.jumbotron
	padding-top 0px
	background: transparent
	font-weight: normal
	color: white
	.logo
		margin-top 20px
		text-align center
		font-size 20px

		> div
			padding 0 30px

	.next-event
		margin-top: 20px;

		> div
			line-height 28px
			margin-bottom 12px

	.event-info
		margin-bottom 40px

	.next-event-date
		text-transform capitalize

.main
	padding-bottom 48px
	background white

.right
	text-align right

.first-container
	padding-top 70px

.footer
	background-color #101010
	color navbarText

.call-for-proposals
	textarea
		width 100%
		height 100px


.avatar-wall
	list-style none
	margin 0
	padding 0

	> div
		margin 10px 0 

		img
			width 50px
			height 50px
			margin 0
			padding 0			
			border-radius 50%
			border 1px solid

.reviews
	.review
		.avatar
			text-decoration: none;
			position: absolute;
			top: -4px;
			left: 0;

			img
				width 25px
				height 25px
				margin 0
				padding 0			
				border-radius 50%
				border 1px solid

		h6
			font-size 15px
			position: relative;
			padding-left: 30px;

.profile
	.bio
		textarea
			width 100%
			height 150px
		form
			margin: 0
			padding: 20px 0
			border-bottom: 1px solid #ddd;
			&:last-chilf
				border: none

.sponsor-home-container
	text-align: center;
	
	.sponsor-home
		height 100px
		display: table-cell;
		vertical-align: middle;	

.user_profile
	img
		width: 99%;
		max-width: 250px;
		border-radius: 50%;
		border: 1px solid;
	h2
		margin: 0; padding: 0
.user_profile_details
	clear: both;

#attended_events_list
	list-style: none;
	margin: 0; padding: 0
	li
		padding: 4px 0;
		i
			font-size: 18px;
			padding: 0 5px 0 0
			color: #aaa;
			position: relative;
			top: 2px;
		&:hover
			i
				color: #666;

#repos_list
	.repo_item
		clear: both;
		margin: 0;
		padding: 15px 0 15px 0;
		border-bottom: 1px solid #ddd;
		.repo_icon
			font-size: 42px;
			color: #aaa;
		.repo_info
			h4
				margin: 0;
			p
				margin: 0;
				padding: 5px 0;
			span
				font-size: 13px;
				color: #aaa;
		&:hover
			background-color: #fcfcfc;
			.repo_icon
				color: #666;

#repos_list_edit
	margin: 5px 0 20px 0;
	padding: 0;
	list-style: none;
	span
		padding: 0 5px 0 10px

@media all and (max-width: 990px)
	body.home
		.jumbotron
			position: relative;
			height: auto;
		.footer
			position: relative;
			height: auto;
	#home_logo
		width: 90%;
		max-width: 460px;
